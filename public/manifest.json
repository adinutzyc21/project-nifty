{
    "short_name": "Nifty App",
    "name": "Nifty App - Find the most relevant part of YouTube videos",
    "description": "Get the most relevant YouTube videos for your handy projects",
    "version": "0.1.0",
    "manifest_version": 3,
    "action": {},
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "css": ["/static/css/app.css", "/static/css/content.css"],
        "js": ["/static/js/content.js"]
      }
    ],
    "icons": {
      "16": "logo16.png",
      "32": "logo32.png",
      "180": "logo180.png",
      "192": "logo192.png",
      "512": "logo512.png"
    }
  }
  